@model HotelManagement.Reservation

@{
    ViewBag.Title = "Cancel Reservation";
}


<h2>Cancel Reservation</h2>

<h3>Are you sure you want to cancel this reservation?</h3>

<table class="table">
    <tr>
        <th>
            User Name
        </th>
        <th>
            User Email
        </th>
        <th>
            Rooms Reserved
        </th>
        <th>
            Start Time
        </th>
        <th>
            End Time
        </th>
    <tr>
        <td>
            @Html.DisplayFor(model => Model.User.name)
        </td>
        <td>
            @Html.DisplayFor(model => Model.User.emailAddress)
        </td>
        <td>
            @String.Join(", ", Model.Rooms.Select(room => room.roomNumber).ToList())
        </td>
        <td>
            @Html.DisplayFor(model => Model.startDateTime)
        </td>
        <td>
            @Html.DisplayFor(model => Model.endDateTime)
        </td>
    </tr>
</table>

using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Cancel" class="btn btn-default" /> |
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

