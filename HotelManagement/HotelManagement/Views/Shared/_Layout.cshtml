    <style>
        .body-content {
            background-image: url('../../Content/imgs/background-with-shadow-tree.jpg');
            background-size: cover; /* Cover the entire container */
            background-position: center; /* Center the background image */
            background-repeat: no-repeat;
            /* background-color: #cae8ce;*/
            color: #43587a; /* Text color for contrast */
            padding: 20px; /* Add padding for spacing */
            border-radius: 10px; /* Rounded corners for a nicer look */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3); /* Add a shadow for depth */
            margin: 0 auto; /* Center the container horizontally */
            /* max-width: 400px;*/ /* Limit the container width */
            margin-top: 50px;
            /*margin-bottom: 250px;*/
            justify-content: center;
        }

        .table {
            border-collapse: collapse; /* Collapse borders to remove spacing between cells */
            width: 100%; /* Make the table fill its container */
        }

            .table th {
                background-color: #c6dbf5; /* Header background color */
                text-align: center; /* Center-align text in header cells */
                border: 1px solid #436e50; /* Single border for all sides */
                padding: 8px; /* Add padding for better spacing */
            }

            .table td {
                text-align: center; /* Center-align text in data cells */
                border: 2px solid #436e50; /* Blue border for all sides */
                border-bottom: 2px double #436e50; /* Double bottom border in blue */
                padding: 8px; /* Add padding for better spacing */
            }
        .navbar {
            text-align: right; /* Align links to the right */
            background-color: transparent; /* Background color for the navbar */
            padding: 5px; /* Add padding for spacing */
            font-size: 18px;
        }
        .navbar ul {
            list-style-type: none; /* Remove list bullets */
            margin: 0;
            padding: 0;
        }

            .navbar ul li {
                display: inline; /* Display links in one line */
                margin-right: 20px; /* Add spacing between links */
            }

                .navbar ul li a {
                    text-decoration: none; /* Remove underlines from links */
                    color: #584e87; /* Link text color */
                    font-weight: bold; /* Make links bold */
                }
            
    </style>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - PI Hotel :)</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
