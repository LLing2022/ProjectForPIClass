    <form method="post"  asp-controller="View" asp-action="Home"  id="test-form" class="white-popup-block mfp-hide">
        <div class="popup_box " >
            <div class="popup_inner">
                <h3>Check Availability</h3>
                
@using (Html.BeginForm("Home", "View", FormMethod.Post, new { @id = "formCustomerBooking" }))
{
                    <div class="row">
                        <div class="col-xl-6">
                            @Html.LabelFor(model => model.customer_name, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.customer_name, new { @class = "form-control", placeholder = "Name" })
                            @Html.ValidationMessageFor(model => model.customer_name, null, new { @class = "text-danger" })
                        </div>
                        <div class="col-xl-6">
                            @Html.LabelFor(model => model.customer_address, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.customer_address, new { @class = "form-control", placeholder = "Address" })
                            @Html.ValidationMessageFor(model => model.customer_address, null, new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-xl-6">
                            @Html.LabelFor(model => model.customer_email, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.customer_email, new { @class = "form-control", type = "email", placeholder = "Email" })
                            @Html.ValidationMessageFor(model => model.customer_email, null, new { @class = "text-danger" })
                        </div>
                        <div class="col-xl-6">
                            @Html.LabelFor(model => model.customer_phone_no, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.customer_phone_no, new { @class = "form-control",placeholder = "Phone No" })
                            @Html.ValidationMessageFor(model => model.customer_phone_no, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xl-6" style="margin-bottom:20px; margin-top:20px">
                           
                            @Html.LabelFor(model => model.booking_from, new { @class = "control-label" })
                            @Html.EditorFor(model => model.booking_from, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.booking_from, null, new { @class = "text-danger" })


                        </div>
                        <div class="col-xl-6"  style="margin-bottom:20px; margin-top:20px">
                            @Html.LabelFor(model => model.booking_to, new { @class = "control-label" })
                            @Html.EditorFor(model => model.booking_to, new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.booking_to, null, new { @class = "text-danger" })
                          
                        </div>
                         </div>
                    <div class="row">
                        <div class="col-xl-6">
                            @Html.LabelFor(model => model.assigned_room, new { @class = "control-label" })
   
                            @Html.DropDownList("assigned_room", null, htmlAttributes: new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.assigned_room, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-xl-6">
                            @Html.LabelFor(model => model.tbl_payment_type, new { @class = "control-label" })

                            @Html.DropDownList("payment_type", null, htmlAttributes: new { @class = "form-control"})
                            @Html.ValidationMessageFor(model => model.tbl_payment_type, "", new { @class = "text-danger" })

                        </div>
                        
                            <div class="col-md-6" style="margin-left:150px;margin-bottom:20px; margin-top:20px">

                                @Html.LabelFor(model => model.no_of_members, new { @class = "control-label" })
                                @Html.TextBoxFor(model => model.no_of_members, new { @class = "form-control" , placeholder = "Member" })
                                @Html.ValidationMessageFor(model => model.no_of_members, null, new { @class = "text-danger" })
                            </div>
                        
                        
                        
                        <div class="col-xl-12"  style="margin-bottom:20px; margin-top:20px">
                            <button id="btnSave" type="submit" class="boxed-btn3">Check Availability</button>
                        </div>
                    </div>
}
            </div>
        </div>
    </form>

   
