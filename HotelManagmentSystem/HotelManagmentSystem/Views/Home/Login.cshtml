@model HotelManagmentSystem.Models.DB.tbl_user

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Login Lasalle Hotel</title>

    <link rel="stylesheet" href="~/Content/LoginContent/css/style.css">
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>
<body>


    <section class="sign-in">
        <div class="container">
            <div class="signin-content">
               

                <div class="signin-form">
                    <h2 class="form-title">Login Here</h2>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {

                        <div class="form-group">

                            <label for="email"><i class="zmdi zmdi-email"></i></label>

                            @Html.TextBoxFor(x => x.email, null, new { @type = "email", name = "email", id = "email", placeholder = "Your Email" })
                            @Html.ValidationMessageFor(x => x.email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="your_pass"><i class="zmdi zmdi-lock"></i></label>
                            @Html.TextBoxFor(x => x.user_password, null, new { @type = "password", name = "your_pass", id = "your_pass", placeholder = "Password" })
                            @Html.ValidationMessageFor(x => x.user_password, "", new { @class = "text-danger" })

                        </div>
                        if (ViewBag.Message != null)
                        {
                            <label class="text-danger">@ViewBag.Messager</label>

                        }





                        <div class="form-group form-button">
                            <input type="submit" id="btnAlertMessage" class="form-submit" value="Login" />
                        </div>

                        <div>
                            @Html.ActionLink("Client SignUp", "Signup")
                            @Html.ActionLink("Forget Password?", "ResetPasswored")
                        </div>

                    }
                   
                </div>
            </div>
        </div>
    </section>



    <!-- JS -->
    <script src="~/Content/LoginContent/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/LoginContent/js/main.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/lib/sweetalert/1.1.3/sweetalert.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnAlertMessage").click(function () {

                var e = document.getElementById("email").value;
